{
  "name": "weasel",
  "version": "1.0.0",
  "description": "Collect end-user data",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:production && npm run build:debug",
    "build:clean": "rm -rf target",
    "build:production": "NODE_ENV=production FILENAME=weasel npm run build:bundle",
    "build:debug": "NODE_ENV=development FILENAME=weasel.debug npm run build:bundle",
    "build:bundle": "npm run build:rollup && npm run build:minify",
    "build:rollup": "rollup  -c -m",
    "build:minify": "java -jar node_modules/google-closure-compiler/compiler.jar --compilation_level=ADVANCED --language_in=ECMASCRIPT5_STRICT --language_out=ECMASCRIPT3 --js_output_file=target/$FILENAME.min.js --output_wrapper='(function(){%output%})();' --create_source_map='%outname%.map' --formatting=SINGLE_QUOTES target/$FILENAME.js",
    "precommit": "npm run test",
    "test": "npm run test:unit && npm run test:lint && npm run test:flow && npm run test:e2e",
    "test:unit": "jest --coverage --collectCoverageFrom=\"lib/**/*.js\" test/unit/* test/server/*",
    "test:e2e": "protractor protractor.config.js",
    "test:lint": "eslint lib/**/*.js test/**/*.js",
    "test:flow": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "author": "Ben Ripkens <bripkens@gmail.com> (http://bripkens.de/)",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^17.0.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-polyfill": "^6.16.0",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "eslint": "^3.11.1",
    "express": "^4.14.0",
    "flow-bin": "^0.36.0",
    "google-closure-compiler": "^20161024.3.0",
    "husky": "^0.11.9",
    "jest": "^17.0.3",
    "protractor": "^4.0.11",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "rollup": "^0.36.4",
    "rollup-plugin-flow": "^1.0.1",
    "rollup-plugin-replace": "^1.1.1",
    "webdriver-manager": "^10.2.8"
  }
}
